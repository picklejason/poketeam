<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title><%- name %>'s Team</title>
    <link href="../styles/index.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico" />
  </head>
  <body>
    <div class="link-container">
      <h2>
        <a class="select-text back" href="javascript:history.back()">
          &#8249; Back
        </a>
      </h2>
      <h2><a class="select-text home" href="/">Home</a></h2>
    </div>
    <h1><%- name %>'s Team</h1>
    <div class="team">
      <% pokemons.forEach((pokemon, index) => { %>
      <a class="select-text" href="../pokemon/<%= pokemon %>">
        <img
          src="<%= sprites[index] %>"
          alt="<%= pokemon %>"
          class="select-image"
        />
        <br />
        <span>
          <b><%= pokemon.charAt(0).toUpperCase() + pokemon.slice(1) %></b>
        </span>
      </a>
      <% }); %>
    </div>
  </body>
</html>
